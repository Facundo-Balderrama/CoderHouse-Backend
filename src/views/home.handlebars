<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
</head>
<body>
    <h1>Products</h1>

    <div>
        {{#each products}}
        <div class="product">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <p>Price: ${{this.price}}</p>
            <p>Category: {{this.category}}</p>

            <!-- Opci贸n 1: Enlace a una nueva vista de detalles del producto -->
            <a href="/products/{{this._id}}">View Details</a>

            <!-- Opci贸n 2: Bot贸n para agregar directamente al carrito -->
            <form action="/api/carts/add/{{this._id}}" method="POST">
                <button type="submit">Add to Cart</button>
            </form>
        </div>
        {{/each}}
    </div>

    <!-- Paginaci贸n -->
    <div>
        {{#if pagination.hasPrevPage}}
        <a href="{{pagination.prevLink}}">Previous</a>
        {{/if}}

        <span>Page {{pagination.page}} of {{pagination.totalPages}}</span>

        {{#if pagination.hasNextPage}}
        <a href="{{pagination.nextLink}}">Next</a>
        {{/if}}
    </div>
</body>
</html>
